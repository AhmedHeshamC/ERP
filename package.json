  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "start:test": "DATABASE_URL=\"postgresql://erp_test_user:test_password_change_me@localhost:5433/erp_test_db\" NODE_ENV=test npm run build && node dist/src/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "mocha",
    "test:watch": "mocha --watch",
    "test:cov": "nyc mocha",
    "test:debug": "mocha --inspect-brk",
    "test:unit": "mocha src/**/*.spec.ts --grep \"Unit\"",
    "test:integration": "mocha src/**/*.spec.ts --grep \"Integration\"",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "prisma:seed": "ts-node prisma/seed.ts",
    "test:db:setup": "./scripts/setup-test-db-simple.sh",
    "test:db:migrate": "NODE_ENV=test npx prisma db push",
    "test:db:reset": "npm run test:db:setup",
    "test:db:check": "NODE_ENV=test node scripts/postgres-test-check.js",
    "docker:postgres": "./scripts/docker-postgres-manager.sh",
    "docker:postgres:start": "./scripts/docker-postgres-manager.sh start",
    "docker:postgres:stop": "./scripts/docker-postgres-manager.sh stop",
    "docker:postgres:status": "./scripts/docker-postgres-manager.sh status",
    "docker:postgres:logs": "./scripts/docker-postgres-manager.sh logs",
    "docker:postgres:connect": "./scripts/docker-postgres-manager.sh connect",
    "security:audit": "npm audit && snyk test",
    "security:check": "npm outdated && npm audit",
    "docker:build": "docker build -t erp-system .",
    "docker:dev": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
