{
  "require": [
    "ts-node/register",
    "tsconfig-paths/register",
    "./src/shared/testing/test-setup.ts"
  ],
  "spec": "src/**/*.spec.ts",
  "exclude": "node_modules/**/*",
  "timeout": 30000,
  "recursive": true,
  "exit": true,
  "full-trace": true,
  "bail": false,
  "extension": ["ts", "js"],
  "watch-files": ["src/**/*.ts", "src/**/*.js"],
  "watch-ignore": ["node_modules/**/*"],
  "node-option": [
    "loader=ts-node/esm"
  ]
}